---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const activeIf = (name: String) => currentPath === name ? 'active' : ''
---

<nav>
    <ul>
        <li><a class={activeIf("")} href="/">accueil</a></li>
        <li><a class={activeIf("resume")} href="/resume">cv</a></li>
        <li><a class={activeIf("contact")} href="/contact">contact</a></li>
        <li><a class={activeIf("projects")} href="/projects">projets</a></li>
        <li><a class={activeIf("games")} href="/games">jeux</a></li>
        <li><a class={activeIf("photography")} href="/photography">photographie</a></li>
        <li><a class={activeIf("boardgames")} href="/boardgames">jeux de société</a></li>
    </ul>
</nav>

<style>
    nav {
        position: fixed;
        top: var(--content-spacing-vertical);
        left: 13px;
        z-index: 3;
    }

    ul {
        margin: 0;
        padding: 0;
        list-style-type: none;
    }

    li {
        width: 30px;
        padding: 0 10px;
    }

    a {
        display: block;
        width: 10px;
        padding: .5rem 0;
        margin: 0 auto;
        font-family: var(--nav-font);
        font-size: var(--nav-font-size);
        color: transparent;
        text-decoration: none;
        text-wrap: nowrap;
        background-color: transparent;
        border: 1px solid #ffffff;
        border-radius: 2px;
        overflow: hidden;
        transition:
            width .3s,
            padding .3s,
            color .3s;
    }

    li:not(:last-child) a {
        margin: 0 0 4px;
    }

    li:hover {
        width: auto;
    }

    li:hover>a {
        width: unset;
        padding: .5rem 1rem;
        color: #000000;
        background-color: #ffffff;
        box-shadow: 0 0 8px #00000040;
    }

    a.active {
        background-color: #ffffff;
    }
</style>
